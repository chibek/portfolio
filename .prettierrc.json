{
  "overrides": [
    {
      "files": "*.svg",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "plugins": [
    "prettier-plugin-tailwindcss"
  ],
  "astroAllowShorthand": true,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "printWidth": 80,
  "quoteProps": "consistent",
  "semi": true,
  "singleQuote": false,
  "singleAttributePerLine": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "closeEmptyJsxElements": true
}