{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",

    "paths": {
      "@/*": ["./src/*"],
      "@styles/*": ["./src/styles/*"],
      "@assets/*": ["./public/assets/*"]
    },

    "plugins": [{ "name": "@astrojs/ts-plugin" }]
  }
}
