---
import { cn } from "@lib/utils";

type Page = { name: string; href: string };
interface Props {
  pages: Page[];
  class?: string;
}
const { pages, class: className } = Astro.props;
---

<nav class={cn("grid grid-cols-3 items-center ", className)}>
  <ul class="flex space-x-4">
    {
      pages.map(({ name, href }) => {
        return (
          <li>
            <a data-nav-link="header" href={href}>
              {name}
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>

<style is:global>
  [data-nav-link="header"] {
    color: theme("colors.muted.foreground / 0.8");
  }

  [data-nav-link="header"]:hover {
    color: theme("colors.foreground");
  }

  [data-nav-link="header"].active {
    color: theme("colors.foreground");
  }

  ul:not(:has([data-nav-link="header"].active)) [data-nav-link="header"] {
    color: theme("colors.foreground");
  }
</style>
