---
import relex from "@assets/acordion/relex.webp";
import sevendos from "@assets/acordion/sevendos.webp";
import { cn } from "@lib/utils";
import { Picture } from "astro:assets";
import { cva } from "class-variance-authority";
const articleVariants = cva(
  "group/article relative w-full overflow-hidden rounded-xl transition-all before:absolute before:inset-x-0 before:bottom-0 before:h-1/3 before:bg-gradient-to-t before:from-black/50 before:transition-opacity after:absolute after:inset-0 after:bg-white/30 after:opacity-0 after:backdrop-blur after:transition-all focus-within:ring focus-within:ring-indigo-300 focus-within:before:opacity-100 md:before:opacity-0 md:hover:before:opacity-100 md:group-focus-within:[&:not(:focus-within):not(:hover)]:w-[20%] md:group-focus-within:[&:not(:focus-within):not(:hover)]:after:opacity-100 md:group-hover:[&:not(:hover)]:w-[20%] md:group-hover:[&:not(:hover)]:after:opacity-100",
  {
    variants: {
      variant: {
        fast: "duration-300 transitionTimingFunctionA",
        medium: "duration-500 transitionTimingFunctionA",
      },
    },
    defaultVariants: {
      variant: "fast",
    },
  }
);
---

<div class="group flex justify-center gap-2 max-md:flex-col">
  <article class={cn(articleVariants({ variant: "medium" }))}>
    <a class="absolute inset-0 z-10 text-white" href="#0">
      <span
        class="absolute inset-x-0 bottom-0 p-6 text-lg font-medium transition duration-200 cubicBezierB group-focus-within/article:translate-y-0 group-focus-within/article:opacity-100 group-focus-within/article:delay-300 group-hover/article:translate-y-0 group-hover/article:opacity-100 group-hover/article:delay-300 md:translate-y-2 md:truncate md:whitespace-nowrap md:px-12 md:py-8 md:opacity-0"
        >"Innovate relentlessly. Stagnation is the enemy of progress."</span
      >
    </a>
    <Picture
      class="absolute h-72 min-w-full object-cover object-top md:h-[480px] md:w-auto"
      src={sevendos}
      width="960"
      height="480"
      alt="Sevendos page"
    />
  </article>
  <article class={cn(articleVariants({ variant: "medium" }))}>
    <a class="absolute inset-0 z-10 text-white" href="#0">
      <span
        class="absolute inset-x-0 bottom-0 p-6 text-lg font-medium transition duration-200 cubicBezierB group-focus-within/article:translate-y-0 group-focus-within/article:opacity-100 group-focus-within/article:delay-300 group-hover/article:translate-y-0 group-hover/article:opacity-100 group-hover/article:delay-300 md:translate-y-2 md:truncate md:whitespace-nowrap md:px-12 md:py-8 md:opacity-0"
        >"Embrace failure as a stepping stone to success."</span
      >
    </a>
    <Picture
      class="h-72 min-w-full object-cover object-top md:h-[480px] md:w-auto"
      src={relex}
      width="960"
      height="480"
      alt="Relex image"
    />
  </article>
  <article class={cn(articleVariants({ variant: "medium" }))}>
    <a class="absolute inset-0 z-10 text-white" href="#0">
      <span
        class="absolute inset-x-0 bottom-0 p-6 text-lg font-medium transition duration-200 cubicBezierB group-focus-within/article:translate-y-0 group-focus-within/article:opacity-100 group-focus-within/article:delay-300 group-hover/article:translate-y-0 group-hover/article:opacity-100 group-hover/article:delay-300 md:translate-y-2 md:truncate md:whitespace-nowrap md:px-12 md:py-8 md:opacity-0"
        >"Dream big, start small, but most importantly, start."</span
      >
    </a>
    <img
      class="h-72 object-cover object-top md:h-[480px] md:w-auto"
      src="./image-03.jpg"
      width="960"
      height="480"
      alt="No found"
    />
  </article>
</div>
